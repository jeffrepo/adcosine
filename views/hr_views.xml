<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="adcosine_view_employee_form" model="ir.ui.view">
            <field name="name">adcosine.hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <field name="bank_account_id" position="after">
                    <field name="residencia_letras"/>
                </field>
            </field>
        </record>

        <record id="adcosine.hr_contract_view_form" model="ir.ui.view">
            <field name="name">adcosine.hr.contract.view.form</field>
            <field name="model">hr.contract</field>
	        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
	        <field name="arch" type="xml">
                <field name="job_id" position="after">
                    <field name="puesto_contrato"/>
                    <field name="vigencia_letras"/>
                </field>


	        </field>
	    </record>



    </data>
</odoo>
